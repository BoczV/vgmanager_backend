{
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.ElasticSearch" ],
        "MinimumLevel": "Verbose",
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "MinimumLevel": "Verbose",
                    "outputTemplate": "[{Timestamp:HH:mm:ss} {CorrelationId} Thread_{ThreadId} {Level}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}{NewLine}",
                    "theme": "Serilog.Sinks.SystemConsole.Themes.SystemConsoleTheme::Literate, Serilog.Sinks.Console"
                }
            },
            {
                "Name": "Elasticsearch",
                "Args": {
                    "nodeUris": "http://localhost:9200;http://elasticsearch:9200/"
                }
            }
        ],
        "Enrich": [ "WithThreadId", "FromLogContext", "WithMachineName", "WithExceptionDetails" ],
        "Properties": {
            "Application": "VGManager.Api"
        }
    },
    "ProjectSettings": {
        "BaseUrl": "https://dev.azure.com"
    }
}
